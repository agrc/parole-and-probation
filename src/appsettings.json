{
  "Serilog": {
    "MinimumLevel": {
      "Default": "Debug",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning"
      }
    },
    "Using":  [
      "Serilog.Sinks.Console"
    ],
    "Enrich": [
      "FromLogContext"
    ],
    "WriteTo": [
      "Console"
    ]
  },
  "AllowedHosts": "*",
  "ReverseProxy": {
   "Routes": [
     {
       "RouteId": "arcgis",
       "ClusterId": "arcgis",
       "Match": {
         "Path": "/mapserver/{*remainder}"
       },
         "Transforms": [
          { "PathPattern": "{remainder}" },
          { "RequestHeadersCopy": "false" }
       ]
     }
   ]
 },
  "ArcGIS": {
    "host": "https://domain/arcgis/",
    "scheme": "https",
    "pathBase": "/arcgis",
    "pathString": "/rest/services/DOC/Offenders/MapServer"
  },
  "ConnectionStrings": {
    "smtp": "send.state.ut.us",
    "pickup": "c:/dev/_maildrop",
  }
}
